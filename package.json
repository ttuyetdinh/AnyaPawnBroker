{
    "scripts": {
        "build": "tsc",
        "prestart": "npm run build",
        "start:prod": "npm run prestart && dotenv -e .env.prod node dist/main.js",
        "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "load:test-env": "dotenv -e .env.test",
        "test:e2e": "dotenv -e .env.test jest --config ./test/jest-e2e.json",
        "test:e2e:watch": "dotenv -e .env.test jest --watch --detectOpenHandles --config ./test/jest-e2e.json",
        "test:watch": "jest --watch --config jest.config.js",
        "typeorm": "typeorm-ts-node-commonjs",
        "typeorm:generate": "npm run typeorm -- migration:generate ./src/migrations/%npm_config_name% -d ./src/config/typeOrm.config.ts",
        "typeorm:run": "npm run typeorm -- migration:run -d ./src/config/typeOrm.config.ts",
        "typeorm:create": "npm run typeorm -- migration:create ./src/migrations/%npm_config_name%",
        "typeorm:revert": "npm run typeorm -- migration:revert -d ./src/config/typeOrm.config.ts",
        "typeorm:show": "npm run typeorm -- migration:show -d ./src/config/typeOrm.config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.9",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.3.9",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.9",
        "@nestjs/typeorm": "^10.0.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20",
        "typescript": "^5.5.2"
    },
    "devDependencies": {
        "@nestjs/testing": "^10.3.9",
        "@types/jest": "^29.5.12",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^6.0.2",
        "dotenv-cli": "^7.4.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.5",
        "ts-node-dev": "^2.0.0"
    }
}
