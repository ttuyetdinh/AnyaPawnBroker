{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "20.1.0",

    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "moduleResolution": "node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    }
}
