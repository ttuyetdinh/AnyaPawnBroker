{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch + Hot Reload",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "args": ["--respawn", "--transpile-only", "${workspaceRoot}/src/main.ts"],
            "console": "integratedTerminal" // won't work if outer folder has space in name
            // "program": dont need because the program is passed via args
            // "preLaunchTask": dont need because ts-node-dev run the typescript file directly
            // "outFiles": dont need because ts-node-dev run the typescript file directly
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (Prod)",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${workspaceFolder}\\src\\main.ts",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.prod" // config the environment file to use
            // "internalConsoleOptions": "openOnSessionStart" // only works with "console": "internalConsole"
        },
        {
            // config to debug the jest unit test for nestjs
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "test",
                "${fileBasenameNoExtension}",
                "--detectOpenHandles",
                "--runInBand",
                "--no-cache",
                "--watchAll",
                "--config",
                "jest.config.js"
            ],
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest E2E",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--detectOpenHandles", "--config", "./test/jest-e2e.json"],
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        }
    ]
}
